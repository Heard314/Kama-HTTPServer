 
[ req ]
default_bits        = 2048
default_keyfile     = privkey.pem
distinguished_name  = req_distinguished_name
req_extensions      = v3_req    # 指定请求使用 v3_req 扩展
prompt = no          # 不提示输入
 
[ req_distinguished_name ]
C  = US
ST = California
L  = San Francisco
O  = My Company
OU = My Department
CN = localhost
emailAddress = admin@mycompany.com
 
[ v3_req ]
subjectAltName = @alt_names   # 引用 alt_names
 
[ alt_names ]
DNS.1   = localhost
IP.1    = 127.0.0.1
 